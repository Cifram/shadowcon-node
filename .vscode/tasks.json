{
	"version": "2.0.0",
	"runner": "terminal",
	"tasks": [
		{
			"label": "build server",
			"type": "shell",
			"command": "tsc",
			"options": {
				"cwd": "server"
			},
			"problemMatcher": []
		},
		{
			"label": "build server (watch)",
			"type": "shell",
			"command": "tsc",
			"args": [
				"--watch"
			],
			"options": {
				"cwd": "server"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "build client",
			"type": "shell",
			"command": "webpack",
			"options": {
				"cwd": "client"
			},
			"problemMatcher": []
		},
		{
			"label": "build client (watch)",
			"type": "shell",
			"command": "webpack",
			"args": [
				"--watch"
			],
			"options": {
				"cwd": "client"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "run server",
			"type": "shell",
			"command": "nodemon",
			"options": {
				"cwd": "client"
			},
			"args": [
				"../server/src/index.js"
			],
			"isBackground": true,
			"problemMatcher": []
		}
	]
}
